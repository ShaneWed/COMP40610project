{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "title": {
    "text": "Tourism in Ireland by Region",
    "fontSize": 24,
    "anchor": "middle"
  },
  "params": [
        {
          "name": "residencyStatus",
          "select": {
            "type": "point",
            "fields": ["Statistic Label"],
            "toggle": "true"
          },
          "bind": "legend"
        },
        {
          "name": "yearSelect",
          "value": 2022,
          "bind": {
            "input": "select",
            "options": [2017, 2018, 2019, 2020, 2021, 2022],
            "name": "Year:"
          }
        }
  ],
  "hconcat": [
    {
      "description": "Map of Ireland with color coded regions",
      "title": "Republic of Ireland, color coded",
      "data": {
        "values": [
          {"img": "https://raw.githubusercontent.com/ShaneWed/COMP40610project/refs/heads/master/IrelandCountiesFilledITA.png"}
        ]
      },
      "mark": {
        "type": "image",
        "aspect": true,
        "height": 400,
        "width": 400
      },
      "encoding": {
        "url": {"field": "img"},
        "y": {"value": 200}
      }
    },
    {
      "vconcat": [
        {
      "description": "Lorem ipsum dolor sit bar chart ITA02",
      "data": {
        "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vSEBPHWJmRPJBUohzxDzF2r7qDhB1gRIOAg1csWPFtUHJgvDYkRs1uYuknv0dk5oSi0Yjeu1dHapXtk/pub?output=csv",
        "format": {
          "type": "csv",
          "parse": {
            "Year": "number"
          }
        }
      },
      "transform": [
        {"filter": "datum['NUTS 2 Region'] !== 'Ireland'"},
        {"filter": "datum['Destination'] == 'All Destinations'"},
        {"filter": "datum['Degree of Urbanisation'] == 'All degrees of urbanisation'"},
        {"filter": {"param": "residencyStatus"}},
        {"filter": "toNumber(datum.Year) == toNumber(yearSelect)"},
        {"calculate": "datum['VALUE'] / 1e6", "as": "Nights Millions"}
      ],
      "title": "Tourism by region",
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "y": {
          "field": "NUTS 2 Region",
          "type": "nominal",
          "axis": {
            "title": "",
            "titleFontSize": 20,
            "titleFont": "Calibri",
            "labelFont": "Calibri",
            "labelFontSize": 12
          }
        },
        "yOffset": {
          "field": "Statistic Label",
          "scale": {
            "domain": ["Irish Resident", "Non-Irish Resident"]
          }
        },
        "x": {
          "field": "Nights Millions",
          "type": "quantitative",
          "axis": {
            "title": "Nights spent (millions)",
            "titleFontSize": 20,
            "titleFont": "Calibri"
          }
        },
        "color": {
          "field": "NUTS 2 Region",
          "type": "nominal",
          "legend": null
        },
        "opacity": {
          "field": "Statistic Label",
          "type": "nominal",
          "legend": {"title": "Residency Status"},
          "scale": {
            "domain": ["Irish Resident", "Non-Irish Resident"],
            "range": [1, 0.5]
          }
        }
      }
    },
    {
      "description": "Lorem ipsum dolor sit line chart ITA02",
      "data": {
        "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vSEBPHWJmRPJBUohzxDzF2r7qDhB1gRIOAg1csWPFtUHJgvDYkRs1uYuknv0dk5oSi0Yjeu1dHapXtk/pub?output=csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum['NUTS 2 Region'] !== 'Ireland'"},
        {"filter": "datum['Destination'] == 'All Destinations'"},
        {"filter": "datum['Degree of Urbanisation'] == 'All degrees of urbanisation'"},
        {"calculate": "datum['VALUE'] / 1e6", "as": "Nights Millions"}
      ],
      "title": "Irish tourism destinations since 2017",
      "mark": {
        "type": "line"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "title": "Year",
          "type": "temporal"
        },
        "y": {
          "field": "Nights Millions",
          "aggregate": "sum",
          "title": "Percent",
          "type": "quantitative"
        },
        "color": {
          "field": "NUTS 2 Region",
          "type": "nominal",
          "scale": {
            "domain": ["Eastern & Midland", "Southern", "Northern & Western"],
            "range": ["#0000FF", "#FF0000", "#008000"]
          }
        }
      }
    }
      ]
    }

  ]
}
